{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (MSBuild) - Full",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\build.ps1",
        "-Configuration",
        "Debug",
        "-Platform",
        "x64"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build (MSBuild) - Managed Only",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\build.ps1",
        "-Configuration",
        "Debug",
        "-ManagedOnly"
      ],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
